<p id="notice"><%= notice %></p>

<h1>Buyings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buyings.each do |buying| %>
      <tr>
        <td><%= buying.name %></td>
        <td><%= buying.price %></td>
        <td><%= link_to 'Show', buying %></td>
        <td><%= link_to 'Edit', edit_buying_path(buying) %></td>
        <td><%= link_to 'Destroy', buying, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Buying', new_buying_path %>
